<!DOCTYPE html>
<html>
    <head>
        <%- include('../partials/head'); %>
    </head>
    <body>
        <div>
        <header>
            <%- include('../partials/header'); %>
            <link rel='stylesheet' href='/content/recipelist.css'/>
        </header>
        </div><br>
        <main>
        <div id="allPage">
            <h1>Recipe List</h1>
            <div style="color: dark green">
                <table>
                    <th>
                
                    <td>Author</td>
                    <td>Date</td>
                    </th>
                    <% for( var i=0; i < recipeList.length; i++) { %>

                            <tr>
                                <td><a href="<%- '/recipe/' + recipeList[i]._id %>" target="_blank" ><%= recipeList[i].title %></a></td>
                                <td><%= recipeList[i].author %></td>
                                <td><%= recipeList[i].published %></td>
                                <!-- <td><%= recipeList[i].description %></td>
                                <td><%= recipeList[i].ingredients %></td> -->
                                <td>
                                    <form action="/update" method="GET">
                                        <input style="display: none" value="<%- recipeList[i]._id %>" name="userId">
                                        <button type="submit">Update</button>
                                    </form>
                                </td>
                                <td>
                                    <form action="/delete" method="POST">
                                        <input style="display: none" value="<%- recipeList[i]._id %>" name="userId">
                                        <button type="submit">Delete</button>
                                    </form>
                                </td>
                            </tr>
                    <%  } %>
                </table>
            </div>
        </div><br>
        <footer>
            <%- include('../partials/footer'); %>
        </footer>
        </main>
    </body>
</html>