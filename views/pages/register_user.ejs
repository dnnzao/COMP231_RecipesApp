<!DOCTYPE html>
<html>
    <head>
        <%- include('../partials/head'); %>
       
        
    </head>
    <body>
        <header>
            <%- include('../partials/header'); %>
            <link rel='stylesheet' href='/content/register.css'/>
            <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css'/>

        </header>
        <div  class="text-center text-muted" >
            <!-- <h1 class="text-center text-muted" >Contact</h1>-->
                <main class="text-center text-muted" >
                    <form class="form" action="/register_user/info" method="POST">
                         
                        <br>
                        <fieldset><br>
                            <legend><b>Please Register</b></legend>
                            <div id="username1">
                                <label for="username"><b>Username: </b></label><br>
                                <input class="contact_input" id="username" name="username" size="35" type="text" required="required" tabindex="1">
                            </div><br>
                            <div id="password1" class="ppassword-container">
                                <label for="password"><b>Password: </b></label><br>
                                <input class="contact_input" id="password" name="password" size="35" type="password" required="required" tabindex="5"><br>
                               <input type="checkbox" onclick="togglePassword()"> Show password
                                <!--<i class="fa-solid fa-eye" 
                                id="show-password"></i>-->
                                

                                <script>
                                function togglePassword() {
                                  var password = document.getElementById("password");
                                  if (password.type === "password") {
                                    password.type = "text";
                                  } else {
                                    password.type = "password";
                                  }
                                }
                                </script><br>
                            </div><br>
                            <div id="email1">
                                <label for="email"><b>Email: </b></label><br>
                                <input class="contact_input" id="email" name="email" size="35" type="email" required="required" tabindex="7">
                            </div><br><br><br><br><br><br><br><br>

                      

                            <div id="button">
                                <button type="submit" name="btnSubmit" value="Complete Registration" tabindex="36">Register Account</button>
                                <button type="reset" name="btnReset" value="Clear Form" onclick="return confirm('Do you really want to reset?')" tabindex="39">Reset</button>
                            </div><br><br><br><br><br>
                        </fieldset><br>
                        <div id="img">
                         <img src="/images/register.jpg" width="350" height="260" alt="register image"> 
                        </div>
                        
                    

                    <% if (errors && errors.length > 0) { %>
                        <div class="errors">
                          <ul style="list-style: none;">
                            <% errors.forEach(error => { %>
                              <li style="color: red;"><%= error.msg %></li>
                            <% }) %>
                          </ul>
                        </div>
                      <% } %>
                </form>
        </main>
        </div>

        <footer>
            <%- include('../partials/footer'); %>
        </footer>


    </body>
</html>